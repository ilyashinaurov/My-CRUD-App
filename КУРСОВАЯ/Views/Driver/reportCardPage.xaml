<Page x:Class="КУРСОВАЯ.Views.reportCardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:КУРСОВАЯ.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="reportCardPage">

    <Grid>
        <ListView ItemsSource="{Binding _reportCard}">
            <ListView.View>

                <GridView>
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Имя}"/>
                    <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding Фамилия}"/>
                    <GridViewColumn Header="Дата оформления заказа" DisplayMemberBinding="{Binding Дата}"/>
                    <GridViewColumn Header="Дата начала" DisplayMemberBinding="{Binding ДатаНачала}"/>
                    <GridViewColumn Header="Дата конца" DisplayMemberBinding="{Binding ДатаОкончания}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
