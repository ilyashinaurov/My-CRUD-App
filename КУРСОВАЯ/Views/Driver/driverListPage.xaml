<Page x:Class="КУРСОВАЯ.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:КУРСОВАЯ.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>

        <ListView ItemsSource="{Binding _driverList}">
            <ListView.View>

                <GridView>
                    <GridViewColumn Header="Код Водителя" DisplayMemberBinding="{Binding КодВодителя}"/>
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Имя}"/>
                    <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding Фамилия}"/>
                    <GridViewColumn Header="Отчество" DisplayMemberBinding="{Binding Отчество}"/>
                    <GridViewColumn Header="Дата Рождения" DisplayMemberBinding="{Binding ДатаРождения}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
